@model ATMWebApp.Models.ChangePinModel

@using (Html.BeginForm("ChangePassword", "Dashboard", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group mt-3">
        @Html.LabelFor(m => m.OldPin)
        @Html.TextBoxFor(m => m.OldPin, new { @class = "form-control", @required = "required", @type = "password" })
        @Html.ValidationMessageFor(m => m.OldPin, "", new { @class = "text-danger" })

    </div>
    <div class="form-group mt-3">
        @Html.LabelFor(m => m.NewPin)
        @Html.TextBoxFor(m => m.NewPin, new { @class = "form-control", @required = "required", @type = "password" })
        @Html.ValidationMessageFor(m => m.NewPin, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mt-3">
        @Html.TextBoxFor(m => m.AccountNumber, new { @class = "form-control", @required = "required", @type = "hidden", @value = "@userData.AccountNumber" })
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
}